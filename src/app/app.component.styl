.container
  width: 320px
  height: 100%
  margin 0 auto

.sticky-footer-wrapper
  box-sizing border-box
  //height: 100%;
  min-height: 100%;
  padding-bottom 24px
  margin-bottom -24px

header
  box-sizing: border-box
  width: 100%
  color: #bfbfbf;
  line-height:48px;
  background-color rgba(27,22,47,.88)
  padding:0 2.5%;
  margin-bottom 30px

.main-body
  box-sizing: border-box
  padding:0 2.5%;
.enter-app-btn
  position: relative;
  display: block;
  width: 100px;
  height: 100px;
  font-size: 1.3em;
  font-weight: light;
  text-align: center;
  line-height: 100px;
  color: white;
  border: none;
  border-radius: 50%;
  background: #5a99d4;
  cursor: pointer;
  box-shadow: 0 0 0 0 rgba(#5a99d4, .5);
  animation: pulse 1.5s infinite
  margin 0 auto
  outline: none
  &:hover
    animation: none;
  &:active
    background-color: #4988c3

footer
  color #fafafa
  line-height:1.5;
  background-color: #2F2F3B
  text-align: center

@keyframes pulse {
  0% {
    transform(scale(.9));
  }
  70% {
    transform(scale(1));
    box-shadow: 0 0 0 50px rgba(#5a99d4, 0);
  }
  100% {
    transform(scale(.9));
    box-shadow: 0 0 0 0 rgba(#5a99d4, 0);
  }
}
